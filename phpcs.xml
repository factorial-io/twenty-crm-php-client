<?xml version="1.0"?>
<ruleset name="Twenty CRM PHP Client">
    <description>PSR-2 coding standard for Twenty CRM PHP Client</description>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Use colors in output -->
    <arg name="colors"/>

    <!-- Paths to check -->
    <file>src</file>
    <file>tests</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- Include PSR-2 coding standard -->
    <rule ref="PSR2"/>
</ruleset>
