# Twenty CRM API Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Twenty CRM API Base URI
# Example: https://api.twenty.com/rest/
TWENTY_API_BASE_URI=https://your-instance.twenty.com/rest/

# Twenty CRM API Token
# Obtain this from your Twenty CRM instance settings
TWENTY_API_TOKEN=your_api_token_here

# Test Mode
# Set to 'unit' to run only unit tests (no API calls)
# Set to 'integration' to run integration tests against real API
TWENTY_TEST_MODE=unit

# Optional: Test Data Prefix
# Prefix for test data to easily identify and clean up
TWENTY_TEST_PREFIX=TEST_PHP_CLIENT_
