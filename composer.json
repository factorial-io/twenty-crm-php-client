{
    "name": "factorial-io/twenty-crm-php-client",
    "description": "PHP client library for Twenty CRM API",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Factorial\\TwentyCrm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Factorial\\TwentyCrm\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.88",
        "guzzlehttp/guzzle": "^7.0",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^4.0",
        "symfony/var-dumper": "^6.0 || ^7.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "suggest": {
        "guzzlehttp/guzzle": "For HTTP client implementation"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
